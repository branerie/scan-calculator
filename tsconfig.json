{
  "compilerOptions": {
    "outDir": "./dist/",        
    "sourceMap": true,          
    "module": "ESNext", 
    "moduleResolution": "Node16",
    "strict": true,           
    "target": "ES2020",
    "jsx": "react",             
    "allowJs": true,
    "strictNullChecks": true,   
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
      "./src/"
  ]
}